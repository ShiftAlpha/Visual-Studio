
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<span style="color:red;">@ViewBag.Error</span>
@using (Html.BeginForm())
{
    <table style=" width:50%;">
        <tr style="height:40px;">
            <td>Username</td>
            <td>@Html.TextBox("Username", null, new { @class = "form-control" })</td>
            <td>&nbsp;</td>
        </tr>
        <tr style="height:40px;">
            <td>Password</td>
            <td>@Html.Password("Passwords", null, new { @class = "form-control" })</td>

        </tr>
        <tr style="height:40px;">
            <td>&nbsp;</td>
            <td><input id="btnSubmit" type="submit" value="Login" class="btn btn-default" />&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    </table>
    <a href="@Url.Action("Logout","Login")">Logout</a>
}


